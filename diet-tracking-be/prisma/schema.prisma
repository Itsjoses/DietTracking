generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/nest"
}

model User{
  id Int @id @default(autoincrement())
  username String
  email String @unique
  password String
  tall Int
  weight Int
  plan Int
  
  food Food[]
  dietDiary DietDiary[]
}

model Food{
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  food_name String
  description String

  dietDiary DietDiary[]
}

model DietDiary {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  food        Food     @relation(fields: [foodId], references: [id]) // Menambahkan relasi ke model Food
  foodId      Int
  date        DateTime @default(now())
}
